<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/channel_rank_category_name" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/channel_rank_item_name_top_margin"
        android:textSize="@dimen/font_size_17"
        android:textColor="@color/white"
        android:text="@string/app_name"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/video_divider_height"
        android:layout_marginTop="@dimen/channel_rank_item_divider_top_margin"
        android:background="@drawable/divider_bg_20" />
    <com.miui.video.widget.media.MediaViewRows
        android:id="@+id/channel_rank_item_rows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/channel_rank_item_rows_top_margin"
        android:layout_marginBottom="@dimen/channel_rank_item_intervalV" />
</LinearLayout>