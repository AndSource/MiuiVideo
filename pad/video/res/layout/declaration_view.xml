<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/declaration_content"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
    	android:layout_marginTop="4dp"
    	android:layout_marginBottom="16dp"
    	android:layout_marginLeft="30dp"
    	android:layout_marginRight="30dp"
        android:text="@string/declaration_content"
        android:textColor="@color/p_40_black"
        android:textColorLink="@color/p_80_black" />
    
    <CheckBox
		android:id="@+id/no_longer_tips"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="30dp"
    	android:layout_marginBottom="24dp"
		android:text="@string/no_longer_tips"
		android:textColor="@color/p_40_black"
		android:checked="true" />
</LinearLayout>