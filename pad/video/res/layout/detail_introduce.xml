<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/detail_introduce_top_margin"
        android:orientation="horizontal">
        <TextView 
	        android:id="@+id/detail_introduce_time"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/app_name"
	        android:textSize="@dimen/detail_introduce_font_size"
	        android:textColor="@color/p_80_black"/>
	    <TextView 
	        android:id="@+id/detail_introduce_type"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="@dimen/detail_introduce_type_left_margin"
	        android:text="@string/app_name"
	        android:textSize="@dimen/detail_introduce_font_size"
	        android:textColor="@color/p_80_black"/>
    </LinearLayout>
    <TextView 
        android:id="@+id/detail_introduce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/detail_introduce_top_margin"
        android:lineSpacingExtra="@dimen/detail_introduce_interval_V"
        android:text="@string/app_name"
        android:textSize="@dimen/detail_introduce_font_size"
        android:textColor="@color/p_80_black"/>
</LinearLayout>