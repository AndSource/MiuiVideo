<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" >
        <TextView
	        android:id="@+id/detail_variety_item_date"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/app_name"
	        android:textColor="@color/p_80_black"
	        android:textSize="@dimen/detail_variety_font_size"/>
        <com.miui.video.widget.TextViewFocus
	        android:id="@+id/detail_variety_item_video_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/detail_variety_item_date"
	        android:layout_marginLeft="@dimen/detail_variety_item_name_left_margin"
	        android:layout_marginRight="@dimen/detail_variety_item_name_right_margin"
	        android:text="@string/app_name"
	        android:textColor="@color/p_80_black"
	        android:textSize="@dimen/detail_variety_font_size"
	        android:singleLine="true" 
        	android:ellipsize="marquee"
        	android:marqueeRepeatLimit="marquee_forever" />
    </RelativeLayout>
    
    <View
        android:id="@+id/detail_variety_item_status"
        android:layout_width="@dimen/status_btn_iv_width"
        android:layout_height="@dimen/status_btn_iv_height"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/status_btn_play"/>
    
    <View
	    android:id="@+id/detail_variety_item_divider"
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/video_divider_height"
	    android:layout_marginTop="@dimen/detail_variety_item_height"
	    android:background="@drawable/divider_bg_black_10" />
</RelativeLayout>