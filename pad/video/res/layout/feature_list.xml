<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true" >
         
    <FrameLayout 
        android:id="@+id/title_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/feature_list_title_left_margin"
        android:layout_marginTop="@dimen/feature_list_title_top_margin">
        <include layout="@layout/title_top"/>
    </FrameLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="@dimen/video_divider_height"
        android:layout_marginTop="@dimen/feature_list_divider_top_margin"
        android:layout_marginLeft="@dimen/video_common_left_margin"
        android:layout_marginRight="@dimen/video_common_right_margin"
        android:background="@drawable/divider_bg_10" />
    
    <com.miui.video.widget.LoadingListView
        android:id="@+id/feature_list_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/video_common_left_margin"
        android:layout_marginRight="@dimen/video_common_right_margin"
        android:layout_marginTop="@dimen/feature_list_list_top_margin"/>
</RelativeLayout>