<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/video_dialog_width"
    android:layout_height="@dimen/video_dialog_height" >
    
    <TextView
		android:id="@+id/local_detail_title" 
		android:layout_width="wrap_content"
		android:layout_height="@dimen/video_common_title_height"
		android:layout_gravity="center_horizontal"
		android:gravity="center"
		android:textSize="@dimen/font_size_17"
		android:textColor="@color/p_80_black"
		android:textStyle="bold"
		android:text="@string/app_name"/>
    
    <View
		android:layout_width="match_parent"
		android:layout_height="@dimen/video_divider_height"
		android:layout_marginTop="@dimen/video_common_title_height"
		android:background="@drawable/divider_bg_black_10"/>
    
    <com.miui.video.widget.LoadingListView
        android:id="@+id/local_detail_list"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginLeft="@dimen/local_detail_common_left_margin"
		android:layout_marginRight="@dimen/local_detail_common_right_margin"
		android:layout_marginTop="@dimen/local_detail_list_top_margin"/>
    
    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/local_detail_common_left_margin"
        android:layout_marginRight="@dimen/local_detail_common_right_margin" >
        <Button 
	        android:id="@+id/local_detail_more"
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/local_detail_more_height"
	        android:layout_marginBottom="@dimen/local_detail_more_bottom_margin"
	        android:textSize="@dimen/font_size_17"
	        android:textColor="@color/p_80_black"
	        android:text="@string/download_select_more"
	        android:background="@drawable/btn_local_detail_more"/> 
    </FrameLayout>
    
    <FrameLayout
        android:id="@+id/action_mode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/download_select_btn_left_margin"
        android:layout_marginRight="@dimen/download_select_btn_right_margin" >
    </FrameLayout>
        
</FrameLayout>