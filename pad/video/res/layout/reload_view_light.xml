<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="@dimen/reload_view_net_light_width"
        android:layout_height="@dimen/reload_view_net_light_height"
        android:layout_gravity="center"
        android:contentDescription="@string/app_name"
        android:src="@drawable/icon_network_error_light" />
    
    <TextView
        android:id="@+id/tv_loadTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/reloading_tip"
        android:textSize="@dimen/font_size_15"
        android:textColor="@color/p_20_black"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_retryloading"
        android:layout_width="@dimen/retry_btn_black_witdh"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/retry_btn_black_margin_top"
        android:background="@drawable/btn_retry_light"
        android:textSize="@dimen/font_size_15"
        android:textColor="@color/p_80_black"
        android:text="@string/retry" />

</LinearLayout>