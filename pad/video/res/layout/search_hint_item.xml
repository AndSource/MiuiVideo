<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
	
    <TextView
        android:id="@+id/search_hint_tv" 
        android:layout_width="wrap_content"
        android:layout_height="@dimen/search_hint_item_height"
        android:layout_marginLeft="@dimen/search_hint_tv_left_margin"
        android:singleLine="true"
        android:textSize="@dimen/font_size_13"
        android:textColor="@color/p_90_white"
        android:text="@string/app_name"
        android:gravity="center_vertical" />
    <View
        android:id="@+id/search_hint_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/video_divider_height"
        android:background="@drawable/divider_bg_10"
        android:alpha="0.5" />
    
</LinearLayout>