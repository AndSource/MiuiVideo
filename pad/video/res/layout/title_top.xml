<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    <ImageButton
        android:id="@+id/title_top_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:contentDescription="@string/app_name"
        android:background="@drawable/btn_title_back"/>
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/title_top_marginV"
        android:layout_marginLeft="@dimen/title_top_paddingH"
        android:orientation="vertical">
        <TextView
		    android:id="@+id/title_top_name"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:singleLine="true"
		    android:textSize="@dimen/font_size_19"
		    android:textColor="@color/white"
		    android:text="@string/app_name"
		    android:includeFontPadding="false"/>  
		<TextView
		    android:id="@+id/title_top_status"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="@dimen/title_top_paddingV"
		    android:singleLine="true"
		    android:textSize="@dimen/font_size_11"
		    android:textColor="@color/p_50_white"
		    android:text="@string/count_ge_media"
		    android:includeFontPadding="false"/> 
    </LinearLayout>  
</LinearLayout>