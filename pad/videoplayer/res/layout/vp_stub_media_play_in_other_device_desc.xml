<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/vp_background_black" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

        <ImageView
            android:id="@+id/play_in_other_device_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/vp_airkan_dktv_background" />

        <TextView
            android:id="@+id/play_in_other_device_textview"
            style="@style/airkan_background_description_textview_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/play_in_other_device_imageview"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:text="@string/airkan_video_playing_in"
            android:textColor="@color/vp_80_white"/>

        <TextView
            style="@style/airkan_background_description_textview_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/play_in_other_device_textview"
            android:layout_centerHorizontal="true"
            android:text="@string/airkan_control_device_des"
            android:textColor="@color/vp_80_white"/>
    </RelativeLayout>

</FrameLayout>