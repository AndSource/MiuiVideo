<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="buffer_dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="menu_popup_anim_style_vertical" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/vp_menu_popup_enter_vertical</item>
        <item name="android:windowExitAnimation">@anim/vp_menu_popup_exit_vertical</item>
    </style>
    <style name="vp_listview_textview_style_v5"><item name="android:textSize">@dimen/sub_option_menu_listview_item_textview_size</item><item name="android:textColor">@color/option_menu_listview_textview_text_color_v5</item></style>
    <style name="vp_top_status_bar_media_name_textview_style_v5"><item name="android:textStyle">bold</item><item name="android:textSize">@dimen/top_status_bar_media_name_textview_font_size_v5</item><item name="android:textColor">@color/vp_white</item></style>
    <style name="vp_top_status_bar_sub_title_textview_style_v5"><item name="android:textSize">13.5dp</item><item name="android:textColor">@color/vp_white</item></style>
    <style name="vp_loading_buffering_textview_style_v5"><item name="android:textStyle">bold</item><item name="android:textSize">@dimen/loading_buffering_textview_font_size</item><item name="android:textColor">#D9FFFFFF</item></style>
    <style name="vp_loading_buffering_to_be_play_textview_style_v5"><item name="android:textSize">@dimen/loading_buffering_to_be_play_textview_font_size</item><item name="android:textColor">#99FFFFFF</item></style>
    <style name="v5_no_round_activity_theme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
    </style>
    
    <style name="vp_normal_progress_style" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDrawable">@drawable/vp_loading_rotate</item>
        <item name="android:background">@drawable/vp_transparent</item>
    </style>
	
    <style name="media_top_info_textview_style">
        <item name="android:textColor">@color/vp_white</item><item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="video_info_textview_style">
        <item name="android:textSize">@dimen/vp_font_size_16</item>
        <item name="android:textColor">@color/vp_white</item>
    </style>

    <style name="menu_popup_anim_style" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/vp_menu_popup_enter</item>
        <item name="android:windowExitAnimation">@anim/vp_menu_popup_exit</item>
    </style>
    
    <style name="full_screen_pause_popup_anim_style" parent="android:Animation"><item name="android:windowEnterAnimation">@anim/vp_fullscreen_pause_popup_enter</item></style>
  	
  	<style name="popup_bottom_controller_textview_style">
        <item name="android:textSize">@dimen/vp_font_size_14</item>
        <item name="android:textColor">@color/vp_white</item>
    </style>
    
    <style name="popup_left_controllist_textview_style"><item name="android:textColor">@color/vp_white</item><item name="android:textSize">15dp</item></style>
    <style name="loading_video_for_netplay_textview_style"><item name="android:textColor">@color/vp_white</item><item name="android:textSize">18dp</item></style>
	<style name="popup_bottom_airkan_device_item_textview_style"><item name="android:textColor">@color/vp_white</item><item name="android:textSize">13sp</item></style>
	<style name="airkan_background_description_textview_style"><item name="android:textSize">18sp</item></style>
    
    <style name="airkan_tips_style">
        <item name="android:textColor">@color/vp_white</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="VpDefaultTheme" parent="android:Theme.Light">    
      <item name="android:windowNoTitle">true</item>
  </style>
</resources>