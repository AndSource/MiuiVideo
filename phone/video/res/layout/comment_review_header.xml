<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:duokan="http://schemas.android.com/apk/res/com.miui.video"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="@dimen/video_common_interval_30"
	    android:layout_marginBottom="@dimen/video_common_interval_40"
	    android:layout_marginLeft="@dimen/video_common_interval_30"
	    android:layout_marginRight="@dimen/video_common_interval_30" >
	    <LinearLayout 
	        android:layout_width="@dimen/comment_review_score_width"
	        android:layout_height="@dimen/comment_review_score_height"
	        android:background="@drawable/comment_review_score_bg"
	        android:orientation="vertical">
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="@dimen/comment_review_avg_hint_height"
	            android:gravity="center"
	            android:textColor="@color/p_80_black"
	            android:textSize="@dimen/text_size_36"
	            android:text="@string/average_score"/>
	        <View 
	            android:layout_width="match_parent"
	            android:layout_height="@dimen/video_common_divider_height"
	            android:background="@drawable/com_10_black"/>
	        <TextView
	            android:id="@+id/comment_review_avg_score" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_horizontal"
	            android:textColor="@color/orange"
	            android:textSize="@dimen/font_size_123"
	            android:text="@string/app_name"/>
	        <com.miui.video.widget.RatingView
	            android:id="@+id/comment_review_avg_rating"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="@dimen/comment_review_rate_top_margin"
	            android:layout_gravity="center_horizontal"
	            duokan:ratingStarScore="score5"
	            duokan:ratingStarType="small" />
	        <TextView
	            android:id="@+id/comment_review_avg_count" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_horizontal"
	            android:textColor="@color/p_50_black"
	            android:textSize="@dimen/text_size_30"
	            android:text="@string/count_comment"/>
	    </LinearLayout>
	    <com.miui.video.widget.ScoreStatusView
	        android:id="@+id/comment_review_score_status" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true" />
	</RelativeLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/video_common_divider_height"
	    android:background="@drawable/com_10_black"
	    android:layout_marginLeft="@dimen/video_common_interval_30"
	    android:layout_marginRight="@dimen/video_common_interval_30"/>    
</LinearLayout>