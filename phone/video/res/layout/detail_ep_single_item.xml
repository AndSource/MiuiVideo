<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
  	<ImageView
  	    android:id="@+id/detail_ep_single_item_icon" 
  	    android:layout_width="@dimen/detail_ep_single_item_icon_width"
  	    android:layout_height="@dimen/detail_ep_single_item_icon_height"
  	    android:layout_gravity="center_vertical"
  	    android:contentDescription="@string/app_name" />
  	<LinearLayout 
  	    android:layout_width="wrap_content"
  	    android:layout_height="wrap_content"
  	    android:layout_gravity="center_vertical"
  	    android:layout_marginLeft="@dimen/detail_ep_single_item_text_left_margin"
  	    android:orientation="vertical" >
  	    <TextView
  	        android:id="@+id/detail_ep_single_item_title" 
  	        android:layout_width="wrap_content"
  	        android:layout_height="wrap_content"
  	        android:textSize="@dimen/font_size_42"
  	        android:textColor="@color/text_color_deep_dark"
  	        android:textIsSelectable="false"/>
  	    <TextView
  	        android:id="@+id/detail_ep_single_item_subtitle" 
  	        android:layout_width="wrap_content"
  	        android:layout_height="wrap_content"
  	        android:textSize="@dimen/font_size_36"
  	        android:textColor="@color/color_sub_text"
  	        android:layout_marginTop="@dimen/detail_ep_single_item_subtitle_top_margin"
  	        android:textIsSelectable="false"/>
  	</LinearLayout>
</LinearLayout>