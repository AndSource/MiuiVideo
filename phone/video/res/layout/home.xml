<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/com_bg_white"
    android:fitsSystemWindows="true">
    <com.miui.video.widget.pager.PagerView
     	android:id="@+id/home_pager_view" 
     	android:layout_width="match_parent"
     	android:layout_height="match_parent"
     	android:background="@color/color_bg_gray">
	</com.miui.video.widget.pager.PagerView>
	<ImageView 
        android:id="@+id/home_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/video_common_interval_40"
        android:layout_marginTop="@dimen/home_search_top_margin"
        android:layout_alignParentRight="true"
        android:src="@drawable/btn_search_bg"/>
	<ImageView 
        android:id="@+id/home_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/video_common_interval_40"
        android:layout_marginTop="@dimen/home_search_top_margin"
        android:src="@drawable/btn_menu_bg"/> 	    
</RelativeLayout>