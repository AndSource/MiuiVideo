<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/load_view_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:orientation="horizontal"
    android:visibility="gone" >
        
    <ProgressBar android:id="@+id/progress"
        style="@style/NormalProgressStyle"
        android:layout_width="@dimen/video_common_progress_height"
        android:layout_height="@dimen/video_common_progress_width"
        android:layout_marginTop="@dimen/video_common_progress_padding"
        android:layout_marginBottom="@dimen/video_common_progress_padding"/>
    
    <TextView
        android:id="@+id/hint_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/loading_text_margin_left"
        android:gravity="center_vertical"
        android:text="@string/loading"
        android:textColor="@color/p_50_black"
        android:textSize="@dimen/font_size_42" />

</LinearLayout>