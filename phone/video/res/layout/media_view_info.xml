<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
       
	<TextView
	    android:id="@+id/media_view_name"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_horizontal"
	    android:singleLine="true"
	    android:textSize="@dimen/font_size_42"
	    android:textColor="@color/p_80_black"
	    android:text="@string/app_name"/>   
    <TextView 
        android:id="@+id/media_view_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/media_info_status_top_margin"
	    android:textSize="@dimen/font_size_36"
	    android:textColor="@color/p_50_black"
	    android:text="@string/app_name"
	    android:singleLine="true"/>     
</LinearLayout>