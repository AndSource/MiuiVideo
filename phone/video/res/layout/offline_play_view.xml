<?xml version="1.0" encoding="utf-8"?>
<com.miui.video.widget.recommend.OfflinePlayView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/offline_play_item_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/play_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/offline_play_item_padding_left"
        android:layout_centerVertical="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/com_btn_play" />

    <TextView
        android:id="@+id/offline_file_size"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginRight="@dimen/offline_play_item_padding_right" 
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/size_12"
        android:textColor="#7f7f7f"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:id="@+id/offline_play_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_toLeftOf="@id/offline_file_size"
        android:layout_toRightOf="@id/play_icon"
        android:layout_marginLeft="@dimen/size_50"
        android:textColor="@color/color_title_text"
        android:textSize="@dimen/text_size_normal" />


</com.miui.video.widget.recommend.OfflinePlayView>