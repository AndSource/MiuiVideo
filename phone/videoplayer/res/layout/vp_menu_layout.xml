<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/vp_list_item_bg">

    <LinearLayout
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:id="@+id/left_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/vp_common_menu_left_margin"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/right_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/vp_common_menu_right_margin"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/upright_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/vp_common_menu_right_margin"
        android:layout_marginTop="@dimen/vp_common_menu_top_margin"
        android:orientation="vertical" />
        
</RelativeLayout>
