<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView 
        android:id="@+id/offline_media_name"
        android:layout_width="@dimen/vp_menu_offline_item_title_width"
        android:layout_height="@dimen/vp_menu_offline_item_height"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:textColor="@color/vp_70_white"
        android:textSize="@dimen/vp_font_size_16"/>

    <LinearLayout 
        android:layout_width="@dimen/vp_menu_offline_item_status_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:orientation="vertical">
        
        <com.miui.videoplayer.widget.OfflineStatusView 
            android:id="@+id/offline_media_status_icon"
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"/>
        
        <TextView 
	        android:id="@+id/offline_media_status"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginTop="@dimen/vp_menu_offline_item_status_margin_top"
	        android:textColor="@color/vp_30_white"
	        android:textSize="@dimen/vp_font_size_8"/>
        
    </LinearLayout>
    
</LinearLayout>
