<?xml version="1.0" encoding="utf-8"?>
<com.miui.videoplayer.controller.PortraitVideoController xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/video_portrait"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/video_portrait_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/vp_info_video_start"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/video_portrait_fullscreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:layout_marginBottom="@dimen/vp_ctrl_media_info_orientation_padding"
        android:layout_marginRight="@dimen/vp_ctrl_media_info_orientation_padding"
        android:contentDescription="@string/app_name"
        android:src="@drawable/vp_info_video_orientation" />

    <com.miui.videoplayer.widget.VideoProgressView
        android:id="@+id/video_portrait_progress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/vp_ctrl_media_info_progress_height"
        android:layout_alignParentBottom="true" />

</com.miui.videoplayer.controller.PortraitVideoController>